<div id="<%= dom_id product %>" class="product-detail">
  <div class="product-detail__header">
    <div class="product-detail__header-content">
      <h1><%= product.model %></h1>
    </div>

    <div class="product-detail__header-actions">
      <%= link_to edit_product_path(product), class: "product-detail__btn product-detail__btn--edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
        </svg>
        Edit
      <% end %>

      <%= button_to product_path(product),
                    method: :delete,
                    class: "product-detail__btn product-detail__btn--delete",
                    form: { data: { turbo_confirm: 'Are you sure?' } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="product-detail__section">
    <div class="product-detail__section-label">Description</div>
    <div class="product-detail__section-content">
      <%= product.description %>
    </div>
  </div>

  <% if product.additional_description.present? %>
    <div class="product-detail__section">
      <div class="product-detail__section-label">Additional Details</div>
      <div class="product-detail__section-content">
        <%= product.additional_description %>
      </div>
    </div>
  <% end %>

  <% if product.image.attached? %>
    <div class="product-detail__image">
      <%= image_tag product.image, alt: product.description %>
    </div>
  <% end %>
</div>