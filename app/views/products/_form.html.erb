<%= simple_form_for product, html: { class: "form" } do |f| %>
  <% if product.errors.any? %>
    <div class="error-message">
      <%= product.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :description,
                input_html: {
                  class: 'form-control',
                  autofocus: true
                },
                label_html: { class: 'form-label' },
                hint_html: { class: 'form-text' } %>
  </div>

  <div class="form-group">
    <%= f.input :additional_description,
                as: :text,
                input_html: {
                  class: 'form-control',
                  rows: 3
                },
                label_html: { class: 'form-label' },
                hint_html: { class: 'form-text' } %>
  </div>

  <div class="form-group">
    <%= f.input :model,
                input_html: { class: 'form-control' },
                label_html: { class: 'form-label' },
                hint_html: { class: 'form-text' } %>
  </div>

  <div class="form-group">
    <%= f.input :image,
                input_html: {
                  class: 'form-control',
                  type: :file
                },
                label_html: { class: 'form-label' },
                hint_html: { class: 'form-text' } %>
  </div>

  <%= f.submit class: "btn btn--primary" %>
<% end %>