<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :additional_description, style: "display: block" %>
    <%= form.text_field :additional_description %>
  </div>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :discarded_at, style: "display: block" %>
    <%= form.datetime_field :discarded_at %>
  </div>

  <div>
    <%= form.label :lock_version, style: "display: block" %>
    <%= form.number_field :lock_version %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
